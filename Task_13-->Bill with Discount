package my_daily_tasks;
import java.util.Scanner;
public class Task_5_6_BillWithDiscount {
public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
	System.out.println("Enter a no. of Products:");
	int np=sc.nextInt();
	System.out.println("Are you Premium User?"); 
	boolean p=sc.nextBoolean();
	if(p==true) {
		int total=(np*1000)-(np*100);
		System.out.println(total);
	}
	else {
		int total2=(np*1000);
		System.out.println(total2);
	}
}
}
